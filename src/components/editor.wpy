<script>
import wepy from 'wepy'

export default class Editor extends wepy.component {
  props = {
    content: {
      type: String,
      twoWay: true
    },
    imageKey: {
      type: String,
      default: '',
      twoWay: true
    },
    enableTools: {
      type: String,
      default: 'location,uploader'
    },
    placeholder: {
      type: String,
      default: ''
    }
  }

  computed = {
    enableLocation() {
      return this.isEnableTool('location')
    },
    enableUploader() {
      return this.isEnableTool('uploader')
    }
  }

  methods = {
    contentChange(e) {
      const { value } = e.detail
      this.content = value
    },
    formSubmit() {
      this.$emit('submitForm')
    }
  }

  isEnableTool(tool) {
    const tools = this.enableTools.split(',')
    return ~tools.indexOf(tool)
  }
}
</script>
